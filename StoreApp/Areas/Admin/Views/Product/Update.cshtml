@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" class="form-control" asp-for="Id">

    <div class="form-group my-3">
        <label asp-for="Name">Product Name</label>
        <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary">Product Summary</label>
        <input type="text" class="form-control" asp-for="Summary" value="@Model.Summary">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Product Price</label>
        <input type="text" class="form-control" asp-for="Price" value="@Model.Price">
    </div>
    <div class="form-group my-3">
        <label asp-for="CategoryId">Category Name</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>
    <div class="">
        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow" style="width: 200px;">
    </div>
    <div class="form-group my-3">
        <label asp-for="ImagePath">Product Image</label>
        <input name="file" type="file" class="form-control">
    </div>
    <div class="btn-group">
        <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Save</button>
        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
            <i class="fa fa-list"></i>
            Products</a>
    </div>
</form>