@model IEnumerable<Product>

<div class="text-center my-3">
    <div class="display-6">Products</div>
</div>

<div class="text-end my-3">
    <a class="btn btn-outline-success" asp-controller="Product" asp-action="Create">
        <i class="fa fa-plus"></i>
        Create
    </a>
</div>

<table class="table table-striped table-hover text-center">
    <thead>
        <td>Id</td>
        <td>Image</td>
        <td>Name</td>
        <td>Price</td>
        <td>Operations</td>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="@item.ImagePath" alt="@item.Name" class="img-fluid rounded shadow" style="width: 100px;">
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-trash"></i>
                    </a>
                    <a target="_blank" class="btn btn-info" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@item.Id">
                        <i class="fa fa-search"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>