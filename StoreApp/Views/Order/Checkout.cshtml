@model Order

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Line1"></label>
        <input class="form-control" asp-for="Line1">
    </div>
    <div class="form-group">
        <label asp-for="Line2"></label>
        <input class="form-control" asp-for="Line2">
    </div>
    <div class="form-group">
        <label asp-for="Line3"></label>
        <input class="form-control" asp-for="Line3">
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <input asp-for="GiftWrap">
        <label>Gift wrap these items.</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary">Checkout</button>
    </div>
</form>